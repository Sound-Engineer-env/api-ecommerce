generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_WITH_SCHEMA")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Product {
  productId    String   @id @unique
  name         String
  description  String?
  price        Decimal
  imageDesktop String
  imageMobile  String
  stock        Int
  // relationships 
  categoryId   String   @unique
  sellerId     String   @unique
  warrantyId   String
  //
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_WITH_SCHEMA")
}

model User {
  id String   @id @default(uuid())
  email  String   @unique
  name   String     
}
  

//npx prisma generate -> genera el esquema

model Product {
  productId    String     @id @default(uuid())
  name         String
  description  String?
  price        Decimal
  imageDesktop String
  imageMobile  String
  stock        Int
  // relationships 
  categoryId   String
  sellerId     String
  warrantyId   String
  //
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
